{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ],
  "types": [
    "node",
    "jest"
  ],
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "baseUrl": ".",
  "include": [
    "src/**/*.ts"
  ]
}